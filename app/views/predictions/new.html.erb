<div class="container-fluid predictor__cont">
    <div class="predictor">
        <div class="row">
            <div class="col-md-6 predictor__box">
                <h1 class="predictor__title">Pico y Placa Predictor</h1>
                <h2 class="predictor__subtitle">Can I go out today?</h2>
                <%= form_tag '/predictions.json', method: :post, remote: true, class: 'predictor__form' do |f|%>
                <div class="form-group">
                    <label for="license_plate">License Plate:</label>
                    <%= text_field_tag :license_plate, nil, class: "license_plate form-control", placeholder: 'PAA-0000' %>
                </div>
                <div class="form-group">
                    <label for="date">Date:</label>
                    <%= date_field_tag :date, nil, class: "date form-control" %>
                </div>
                <div class="form-group">
                    <label for="time">Time:</label>
                    <%= time_field_tag :time, nil, class: "time form-control" %>
                </div>
                <div class="form-group">
                    <%= submit_tag "Send", class:' btn btn-primary predictor__btn' %>
                </div>
            <% end %>
            </div>
            <div class="col-md-6 predictor__result-cont">
                <p id="result" class='predictor__result'><%= @prediction %></p>
            </div>
        </div>
    </div>
</div>


